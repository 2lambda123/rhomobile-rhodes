<div class="pageTitle">
  <h1>Settings</h1>
</div>


<div class="toolbar">
</div>

<div class="content">
  <ul>
    <% if @msg %>
        <li style="color: red; text-align: center"><%= @msg %></li>
    <% end %>
    <li>
      <div class="label">Client ID:</div>
      <div class="value"><%= Rhom::Rhom::client_id %></div>
    </li>
    <li class="arrow">
      <a href="<%= url_for :action => :reset %>">Reset Database</a>
    </li>
    <li class="arrow">
      <a href="<%= url_for :action => :do_sync %>">Perform Sync</a>
    </li>
    <% if SyncEngine::logged_in > 0 %>
        <li class="arrow">
          <a href="<%= url_for :action => :logout %>">Logout</a>
        </li>
    <% else %>
        <li class="arrow">
          <a href="<%= url_for :action => :login %>">Login</a>
        </li>
    <% end %>
  </ul>
</div>