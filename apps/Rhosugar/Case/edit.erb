<form title="Edit Case" 
	  class="panel" 
	  id="case_edit_form" 
	  method="POST" 
	  action="<%=url_for('update')%>">
	<fieldset>
		<input type="hidden" name="object" value="<%=@case.object%>"/>
		<div class="row">
			<label>Number: </label>
			<input name="case[case_number]" value="<%=@case.case_number%>"/>
		</div>
		<div class="row">
			<label>Subject: </label>
			<input type="text" name="case[name]" value="<%=@case.name.nil? ? "" : @case.name%>"/>
		</div>
		<div class="row">
			<label>Assigned To: </label>
			<select name="case[assigned_user_id]">
				<%@employees.each do |a|%>
					<option value="<%=a.object%>" <%if @employee.object==a.object%>
					selected<%end%>><%=a.user_name%>
					</option>
				<%end%>
			</select>
		</div>
		<div class="row">
			<label>Account Name: </label>
			<select name="case[account_id]">
				<%@accounts.each do |a|%>
					<option value="<%=a.object%>" <%if @account.name==a.name%>
					selected<%end%>><%=a.name%></option>
				<%end%>
			</select>
		</div>
		<div class="row">
			<label>Priority: </label>
			<select name="case[priority]" value="<%=@case.priority%>">
				<option>High</option>
				<option>Medium</option>
				<option>Low</option>
			</select>
		</div>
		<div class="row">
			<label>Status: </label>
			<select name="case[status]" value="<%=@case.status%>">
				<option>New</option>
				<option>Assigned</option>
				<option>Closed</option>
			</select>
		</div>
		<div class="row">
			<label>Type: </label>
			<select name="case[type]" value="<%=@case.type%>">
				<option>Administration</option>
				<option>Product</option>
				<option>User</option>
			</select>
		</div>	
	</fieldset>
	<div class="row">
		<label>Description: </label>
	</div>
	<textarea name="case[description]" rows="3" cols="40">
		<%=@case.description%>
	</textarea>
	<div class="row">
		<label>Resolution: </label>
	</div>
	<textarea name="case[resolution]" rows="3" cols="40">
		<%=@case.resolution%>
	</textarea>
	<input type="submit" value="Update Case"/>
	<p align="center">
		<a href="<%=url_for('delete', @case.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>
