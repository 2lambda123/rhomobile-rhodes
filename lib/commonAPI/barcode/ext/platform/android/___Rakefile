require 'fileutils'

BARCODE_ENGINE = ENV['BARCODE_ENGINE']

puts Dir.pwd

path = File.join(Dir.pwd, "src", "com", "rho", "barcode", "EngineChooser.java");

File.open(path, 'w') { |file| 
	file.write("package com.rho.barcode;\n")
	file.write("\n")
	file.write("public class EngineChooser\n");
	file.write("{\n");
	file.write("\tpublic static final boolean usingGoogleEngine = " + ((BARCODE_ENGINE == "google") ? "true" : "false") + ";\n")
	file.write("}\n");
}