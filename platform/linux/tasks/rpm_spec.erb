%define appname <%= $appname %>

Summary:    Rhodes based application
Name:       %{appname}
Version:    <%= $version_app %>
Release:    1
Group:      Networking/Other
License:    Proprietary  
Source0:	<%= $appname %>.tar
Vendor:     <%= $vendor %>
BuildArch:  <%= $architecture %>
Autoreq: 0

<% $deps.each do | dep | %>
Requires: <%= dep %><% end %>

%description
<%= $appname %>.<%= $version_app %>-1.<%= $architecture %> - Rhodes based application.

%prep
%setup -q 

%build

%install<% if $create_buildroot %>
mkdir %{buildroot}<%end%>
mv * %{buildroot}

%files
<%= $target_dir %>/%{appname}
/usr/share/applications/%{appname}.desktop
#%attr(0777, root, root) <%= $target_dir %>/%{appname}
#%attr(0755, root, root) /usr/share/applications/%{appname}.desktop
